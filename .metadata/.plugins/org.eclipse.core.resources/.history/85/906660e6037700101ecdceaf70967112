                <input type="date" class="form-control" id="dateOfDeparture" th:field="*{dateOfDeparture}" required>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <span th:text="${reservation.id == null} ? 'Create' : 'Update'"></span> Reservation
