<body>
    <div class="container mt-5" th:if="${reservation}">
        <!-- Reservation Details -->
        <div class="card detail-card">
            <div class="card-header bg-primary text-white">
                <h2>Reservation Details</h2>
            </div>
            <div class="card-body">
                <h4 th:text="${reservation.firstName + ' ' + reservation.lastName}"></h4>
                <p><strong>Reservation ID:</strong> <span th:text="${reservation.id}"></span></p>
                
                <div class="row">
                    <div class="col-md-6">
                        <h5>Travel Information</h5>
                        <p>
                            <strong>Passengers:</strong> 
                            <span th:text="${reservation.numberOfPassengers}"></span><br>
                            <strong>Class:</strong> 
                            <span th:text="${reservation.travelClass}"></span><br>
                            <strong>Departure:</strong> 
                            <span th:text="${#temporals.format(reservation.dateOfDeparture, 'MMMM dd, yyyy')}"></span>
                            at <span th:text="${#temporals.format(reservation.time, 'HH:mm')}"></span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5>Contact Information</h5>
                        <p>
                            <strong>Phone:</strong> 
                            <span th:text="${reservation.phoneNumber}"></span><br>
                            <strong>Status:</strong>
  <span th:text="${reservation.status != null} ? ${reservation.status} : 'CONFIRMED'" 
      th:class="${reservation.status == 'PENDING' ? 'text-danger' : 
                (reservation.status == 'PAYMENT_COMPLETED' ? 'text-warning' : 'text-success')}"></span>                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Details -->
        <div class="card detail-card" th:if="${reservation.payment != null or payment != null}">
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Payment Information</h3>
                    <span th:if="${reservation.status == 'CREATED'}" class="badge bg-warning">Action Required</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            <strong>Payment ID:</strong> 
                            <span th:text="${reservation.payment != null} ? ${reservation.payment.id} : ${payment.id}"></span><br>
                            <strong>Amount:</strong> 
                            <span th:text="${'$' + #numbers.formatDecimal((reservation.payment != null ? reservation.payment.amount : payment.amount), 1, 2)}"></span><br>
                            <strong>Date:</strong> 
                            <span th:text="${#temporals.format((reservation.payment != null ? reservation.payment.date : payment.date), 'MMMM dd, yyyy')}"></span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Status:</strong> 
                            <span th:text="${reservation.payment != null} ? ${reservation.payment.status} : ${payment.status}"
                                  th:class="${(reservation.payment != null ? reservation.payment.status : payment.status) == 'COMPLETED'} ? 'text-success' : 'text-warning'"></span><br>
                            <strong>Details:</strong> 
                            <span th:text="${reservation.payment != null} ? ${reservation.payment.details} : ${payment.details}"></span>
                        </p>
                    </div>
                </div>
                <div class="action-buttons" th:if="${reservation.status == 'CREATED'}">
                    <a th:href="@{'/reservations/' + ${reservation.id} + '/process-payment'}" 
                       class="btn btn-primary">
                        <i class="bi bi-credit-card"></i> Process Payment
                    </a>
                </div>
            </div>
        </div>

        <!-- Ticket Details -->
        <div class="card detail-card" th:if="${reservation.ticket != null or ticket != null}">
            <div class="card-header bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Ticket Information</h3>
                    <span th:if="${reservation.status == 'PAYMENT_COMPLETED'}" class="badge bg-warning">Action Required</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            <strong>Ticket Number:</strong> 
                            <span th:text="${reservation.ticket != null} ? ${reservation.ticket.number} : ${ticket.number}"></span><br>
                            <strong>Price:</strong> 
                            <span th:text="${'$' + #numbers.formatDecimal((reservation.ticket != null ? reservation.ticket.price : ticket.price), 1, 2)}"></span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Status:</strong> 
                            <span th:if="${reservation.ticket != null and reservation.ticket.status != null}" 
                                  th:text="${reservation.ticket.status}"
                                  th:class="${'ticket-status-' + reservation.ticket.status.toLowerCase()}"></span>
                            <span th:if="${ticket != null and ticket.status != null and reservation.ticket == null}" 
                                  th:text="${ticket.status}"
                                  th:class="${'ticket-status-' + ticket.status.toLowerCase()}"></span>
                            <span th:if="${reservation.ticket == null and ticket == null}">NOT ISSUED</span><br>
                            <strong>Details:</strong> 
                            <span th:text="${reservation.ticket != null} ? ${reservation.ticket.details} : ${ticket.details}"></span>
                        </p>
                    </div>
                </div>
                <div class="action-buttons" th:if="${reservation.status == 'PAYMENT_COMPLETED'}">
                    <a th:href="@{'/reservations/' + ${reservation.id} + '/issue-ticket'}" 
                       class="btn btn-success">
                        <i class="bi bi-ticket-perforated"></i> Issue Ticket
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Workflow Progress -->
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="mb-0">Reservation Progress</h3>
            </div>
            <div class="card-body">
                <div class="steps">
                    <div class="step" th:classappend="${reservation.status == 'CREATED' or 
                                                     reservation.status == 'PAYMENT_COMPLETED' or 
                                                     reservation.status == 'COMPLETED'} ? 'active' : ''">
                        <span class="step-number">1</span>
                        <span class="step-title">Reservation Created</span>
                    </div>
                    <div class="step" th:classappend="${reservation.status == 'PAYMENT_COMPLETED' or 
                                                     reservation.status == 'COMPLETED'} ? 'active' : ''">
                        <span class="step-number">2</span>
                        <span class="step-title">Payment Processed</span>
                    </div>
                    <div class="step" th:classappend="${reservation.status == 'COMPLETED'} ? 'active' : ''">
                        <span class="step-number">3</span>
                        <span class="step-title">Ticket Issued</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a th:href="@{'/reservations/edit/' + ${reservation.id}}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Reservation
            </a>
            <form th:action="@{'/reservations/delete/' + ${reservation.id}}" method="post" style="display: inline-block;">
                <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want to delete this reservation?')">
                    <i class="bi bi-trash"></i> Delete Reservation
                </button>
            </form>
            <a th:href="@{/reservations}" class="btn btn-secondary">
                <i class="bi bi-list"></i> Back to List
            </a>
        </div>
    </div>
